#include <stdio.h>

int main() {
    int random ,guess;
    int no_of_guess=0;

    printf("Welcome to the world of guessing number \n");
    
    do{
        printf("please Enter your guess between(1 to 100): ");
        scanf("%d", &guess);
        no_of_guess++;


        if(guess < random) {
            printf("Guess a larger number.\n");
        } else if(guess > random) {
            printf("Guess a smaller number.\n");
        } else {
            printf("Congratulations !!! You guessed it right.%d\n",no_of_guess);
        }

    }while(guess != random);
    printf("Game Over! Bye Bye,thenks for playing.\n");
    printf("Developed by Amartya\n");
    return 0;
}
